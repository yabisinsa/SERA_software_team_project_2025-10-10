<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false">

    <!-- 1. 부유 운동 (Floating)
         화면을 기준으로 좌우/상하 15% 범위에서 10초 동안 무한히 움직입니다. -->
    <translate
        android:fromXDelta="-15%p"
        android:toXDelta="15%p"
        android:fromYDelta="-15%p"
        android:toYDelta="15%p"
        android:duration="10000"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:interpolator="@android:anim/linear_interpolator" />

    <!-- 2. 느린 회전 (Slow Rotation)
         별이 제자리에서 360도 회전하여 자유로운 느낌을 더합니다. -->
    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="20000"
        android:repeatCount="infinite"
        android:interpolator="@android:anim/linear_interpolator" />

    <!-- 3. 깜빡이는 효과 (Twinkle)
         투명도를 0.4에서 1.0 사이로 반복하여 반짝이는 느낌을 줍니다. -->
    <alpha
        android:fromAlpha="0.4"
        android:toAlpha="1.0"
        android:duration="1500"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:interpolator="@android:anim/accelerate_interpolator" />

</set>
