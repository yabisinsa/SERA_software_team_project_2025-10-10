<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_blue_gradient"
    tools:context=".DetailAnalysisActivity">

    <!-- 애니메이션 배경 레이아웃 추가 -->
    <include layout="@layout/background_layout" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detailAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#0DFFFFFF"
        app:elevation="0dp"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageButton
                android:id="@+id/detailBackButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingHorizontal="16dp"
                android:layout_gravity="start"
                app:tint="@android:color/white"
                android:contentDescription="뒤로가기" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S.E.R.A."
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detailAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none"
        android:paddingTop="24dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_detail_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                tools:text="2025년 10월 19일의 기록" />

            <TextView
                android:id="@+id/tv_detail_time_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9090A0"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                tools:text="오후 7:30에 분석된 감정 기록입니다" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_main_emotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/result_card_dark_bg"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp">

                    <TextView
                        android:id="@+id/tv_main_emotion_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주요 감정"
                        android:textColor="#C0C0D0"
                        android:textSize="14sp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_emotion_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="20dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="16dp">
                        <TextView
                            android:id="@+id/tv_main_emotion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="32dp"
                            android:paddingHorizontal="48dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="48sp"
                            android:textColor="@android:color/white"
                            tools:text="슬픔" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_main_emotion_probability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="62%"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 의 확률로 감지되었습니다"
                            android:textColor="#E0E0E0"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/card_emotion_distribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/result_card_dark_bg"
                android:layout_marginTop="24dp"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_distribution_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감정 분포"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:id="@+id/ll_emotion_bars_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>